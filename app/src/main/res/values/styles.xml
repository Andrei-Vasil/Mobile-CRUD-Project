<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Heading1">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="Heading3">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
    </style>

    <style name="Button1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
    </style>

    <style name="RegularTextBold">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/</item>
    </style>


    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:radius">4dp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAppearance">@style/Body1</item>
        <item name="boxStrokeColor">@color/edit_text_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextInputLayoutStyleDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:radius">4dp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAppearance">@style/Body1</item>
        <item name="boxStrokeColor">@color/edit_text_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:radius">4dp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:radius">4dp</item>
    </style>

    <style name="AutocompleteTextView" parent="TextInputEditTextStyle">
        <item name="android:paddingLeft">8dp</item>
        <item name="minHeight">99dp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
    </style>

</resources>