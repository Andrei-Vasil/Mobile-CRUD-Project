<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrudApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/PrimaryButton</item>
        <item name="editTextStyle">@style/TextInputEditTextStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="materialButtonOutlinedStyle">@style/OutlinedButton</item>
        <item name="autoCompleteTextViewStyle">@style/AutocompleteTextView</item>
        <item name="textInputOutlinedExposedDropdownMenuStyle">@style/TextInputLayoutStyleDropdown</item>
    </style>
</resources>